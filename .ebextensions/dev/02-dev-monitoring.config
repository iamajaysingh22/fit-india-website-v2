option_settings:
  aws:elasticbeanstalk:cloudwatch:logs:
    StreamLogs: true
    DeleteOnTerminate: false
    RetentionInDays: 3
    
  aws:elasticbeanstalk:cloudwatch:logs:health:
    HealthStreamingEnabled: true
    DeleteOnTerminate: false
    RetentionInDays: 3

container_commands:
  06_install_monitoring:
    command: |
      echo "Setting up development monitoring..."
      # Install additional monitoring tools for development
      npm install -g pm2 || true
    cwd: "/var/app/staging"
    leader_only: true